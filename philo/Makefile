NAME = philo

CC = cc

CFLAGS = -Werror -Wall -Wextra -g3 -D_REENTRANT -I./headers/
# -fsanitize=thread
RM = rm -rf

SRCS = 	$(addprefix srcs/, main.c parsing.c init.c philo_life.c brain_life.c utils.c)

OBJ_DIR = objs

OBJS = $(addprefix $(OBJ_DIR)/, $(SRCS:.c=.o))

DEPS = $(OBJS:.o=.d)

all : first_header $(NAME) second_header

$(NAME) : $(OBJS)
	$(CC) $(CFLAGS) -o $@ $^

$(OBJ_DIR)/%.o: %.c
	@mkdir -p $(@D)
	$(CC)  $(CFLAGS) -MMD -c -o $@ $<

clean:
	$(RM) $(OBJS) $(DEPS) $(OBJ_DIR)

fclean: clean
	$(RM) $(NAME)

re : fclean all

.PHONY: all clean fclean re

info: header

first_header:
	@echo "\n $$FIRST_HEADER \n"

